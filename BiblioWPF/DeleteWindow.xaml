<Window x:Class="BiblioWPF.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BiblioWPF"
        mc:Ignorable="d"
        Title="Delete" Height="150" Width="280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Message" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="3"/>
        <Button Height="20" Width="50" Content="Yes" Grid.ColumnSpan="4" FontSize="12" Margin="23,47,107,17" Click="Button_Click"/>
        <Button Height="20" Width="50" Content="No" Grid.ColumnSpan="4" FontSize="12" Margin="107,47,23,17" Click="Button_Click_1"/>
    </Grid>
</Window>
